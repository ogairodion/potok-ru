include ../checkbox/checkbox.pug

mixin dropdown(element)
    .dropdown
        .dropdown__label.error__label.form-small.hidden Ошибка
        .dropdown__top
            .dropdown__placeholder.font-form= element.text
            .dropdown__arrow 
                i(data-feather="chevron-down")
        .dropdown__list
            each item in element.list
                .dropdown__list-item
                    .dropdown__list-checkbox
                        +checkbox({ checked: false, disabled: false, value: item.value })
                    .dropdown__list-text.font-form= item.text
