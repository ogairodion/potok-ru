mixin button(element)
    - var className = element.className ? element.className : '';
    - var parentClass = element.parentClass ? element.parentClass : '';
    - var color = element.color ? 'button-' + element.color : '';
    - var type = element.type ? 'button-' + element.type : '';
    - var size = element.size ? 'button-' + element.size : '';
    - var font_size = element.font_size ? 'font-' + element.font_size : '';
    - var font_weight = element.font_weight ? 'font-' + element.font_weight : '';
    - var popup = element.popup;
    - var close_popup = element.close_popup ? 'data-fancybox-close' : ''; 
    - var close_popup_class = element.close_popup ? 'button-popup-close' : ''; 
    
    - if (element.typeBtn !== 'arrow')
        .button(class=parentClass)
            - if (element.label)
                label.button__label= element.label
            - if (element.tag === 'link')
                a.button__container(class=[color, type, size, font_size, font_weight, className] disabled=element.disabled href=element.href data-fancybox=popup)
                    - if (element.icon_left)
                        .button__icon
                            i(data-feather=element.icon_left)
                    - if (element.text)
                        .button__text= element.text
                    - if (element.icon_right)
                        .button__icon
                            i(data-feather=element.icon_right)
                    - if (element.icon)
                        .button__icon
                            +svgMono(element.icon)
            - else
                - if (element.close_popup)
                    button.button__container(class=[color, type, size, font_size, font_weight, close_popup_class, className] data-fancybox-close disabled=element.disabled type=element.type)
                        - if (element.icon_left)
                            .button__icon
                                i(data-feather=element.icon_left)
                        - if (element.text)
                            .button__text= element.text
                        - if (element.icon_right)
                            .button__icon
                                i(data-feather=element.icon_right)
                        - if (element.icon)
                            .button__icon
                                +svgMono(element.icon)
                - else
                    button.button__container(class=[color, type, size, font_size, font_weight, className] disabled=element.disabled type=element.type)
                        - if (element.icon_left)
                            .button__icon
                                i(data-feather=element.icon_left)
                        - if (element.text)
                            .button__text= element.text
                        - if (element.icon_right)
                            .button__icon
                                i(data-feather=element.icon_right)
                        - if (element.icon)
                            .button__icon
                                +svgMono(element.icon)
    - else 
        button.button(class='button-' + element.typeBtn class='button-' + element.typeBtn + '-' + element.color type=element.type class=className)
            .button__icon   
                i(data-feather=element.icon)