mixin button(element)
    - var color = element.color ? 'button-' + element.color : '';
    - var type = element.type ? 'button-' + element.type : '';
    - var size = element.size ? 'button-' + element.size : '';
    - var font_size = element.font_size ? 'font-' + element.font_size : '';
    - var font_weight = element.font_weight ? 'font-' + element.font_weight : '';
    
    - if (element.typeBtn !== 'arrow')
        .button
            - if (element.label)
                label.button__label= element.label
            - if (element.tag === 'link')
                a.button__container(class=[color, type, size, font_size, font_weight] disabled=element.disabled href=element.href)
                    - if (element.icon_left)
                        .button__icon
                            i(data-feather=element.icon_left)
                    - if (element.text)
                        .button__text= element.text
                    - if (element.icon_right)
                        .button__icon
                            i(data-feather=element.icon_right)
                    - if (element.icon)
                        .button__icon
                            +svgMono(element.icon)
            - else
                button.button__container(class=[color, type, size, font_size, font_weight] disabled=element.disabled type=element.type)
                    - if (element.icon_left)
                        .button__icon
                            i(data-feather=element.icon_left)
                    - if (element.text)
                        .button__text= element.text
                    - if (element.icon_right)
                        .button__icon
                            i(data-feather=element.icon_right)
                    - if (element.icon)
                        .button__icon
                            +svgMono(element.icon)
    
    - else 
        button.button(class='button-' + element.typeBtn class='button-' + element.typeBtn + '-' + element.color type=element.type)
            .button__icon   
                i(data-feather=element.icon)