            each column in columns
                .main-top__column
                    .main-top__column-title.font-h4= column.title
                    .main-top__column-text.font-p-1!= column.text
        .main-top__btn
            +button({
                text: 'Записаться на практикум',
                color: 'blue-general',
                icon: 'study',
                href: '/',
                tag: 'link',
            })
        