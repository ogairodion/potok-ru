extends layouts/default
include helpers/_mixins-default
include helpers/_mixins-custom

block variables
  - const title = "Поток"

block content
    include ../blocks/modules/header/header.pug
    include ../blocks/components/input/input.pug

    main.main
      .l-default
        form
          .main__test
            .main__test-item
              +input({
                type: 'text',
                placeholder: 'Placeholder text *',
                required_text: 'Placeholder text <span>*</span>',
                required: true,
                name: 'name',
              })

          .main__test-item
              +input({
                type: 'textarea',
                placeholder: 'Введите имя',
                name: 'message',
                max: '3000',
              })

block scripts
  script(defer src="js/vendor.js")
  script(defer src="js/main.js")